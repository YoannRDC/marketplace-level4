<%= form_with(model: order) do |f| %>
  <% if order.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :side %> :
    <%= f.select :side, ["buy", "sell"] %>
  </div>
  <br>
  <div class="field">
    <%= f.label :buy_type %> :
    <%= f.select :buy_type, ["request", "market"] %>
  </div>
  <br>
  <div class="field">
    <%= f.label :coin %> :
    <%= f.select :coin, ["BTC", "ETH"] %>
  </div>
  <br>
  <div class="field">
    <%= f.label :price_per_coin %> :
    <%= f.number_field :price_per_coin, autofocus: true, autocomplete: "price per coin", in: 0.01..999999999.99, step: 0.01 %>
    Note: useless if 'buy type' is market (put any value).
  </div>
  <br>
  <div class="field">
    <%= f.label :coin_amount %> :
    <%= f.number_field :coin_amount, autofocus: true, autocomplete: "coin amount", in: 0.00000001..9999999.99999999, step: 0.00000001 %>
  </div>
  <br>
  <div>
    <%= f.submit %>
  </div>
<% end %>
